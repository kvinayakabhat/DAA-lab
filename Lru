
#include<stdio.h>
#include<stdlib.h>
void FIFO(int [],int [],int,int);
void lru(int [],int [],int,int);
int main()
{
        int ch,YN=1,i,l,f;
        int F[10],s[25];
        printf("\n\n\tEnter the no of empty frame:");
        scanf("%d",&f);
        printf("\n\n\tEnter the length of string:");
        scanf("%d",&l);
        printf("\n\n\tEnter string:");
        for(i=0;i<l;i++)
                scanf("%d",&s[i]);
        for(i=0;i<f;i++)
                F[i]=-1;
        do
        {
                printf("\n\n\t********MENU********");
                printf("\n\n\t1.FIFO\n\n\t2.LRU\n\n\t3.EXIT");
                printf("\n\n\tEnter your choice:");
                scanf("%d",&ch);
                switch(ch)
                {
                        case 1:
                        for(i=0;i<f;i++)
                        {
                                F[i]=-1;                      
                        }
                        FIFO(s,F,l,f);
                        break;
                        case 2:
                        for(i=0;i<f;i++)
                        {
                                F[i]=-1;
                        }
                        lru(s,F,l,f);
                        break;
                        case 3:
                        exit(0);
                }
                printf("\n\n\tDo you want to continue IF YES PRESS 1\n\n\t IF NO PRESS 0:");  
                scanf("%d",&YN);                              
        }
        while(YN==1); return (0);
}
void FIFO(int s[],int F[],int l,int f)
{
        int i,j=0,k,flag=0,cnt=0;
        printf("\n\tPAGE\tFRAMES\tFAULTS");
        for(i=0;i<l;i++)
        {
                for(k=0;k<f;k++)
                {
                        if(F[k]==s[i])
                                flag=1;
                }
                if(flag==0)
                {
                        printf("\n\t%d\t",s[i]);
                        F[j]=s[i];
                        j++;
                        for(k=0;k<f;k++)
                        {
                                printf("%d",F[k]);
                        }
                        printf("\tPage-fault%d",cnt);
                        cnt++;
                }
                else
                {
                        flag=0;
                        printf("\n\t%d\t",s[i]);
                        for(k=0;k<f;k++)
                        {
                                printf("%d",F[k]);
                        }
                        printf("\t No Page Fault");
                }
                if(j==f)
                        j=0;
        }
}
void lru(int s[],int F[],int l,int f)
{
        int i,j=0,k,m,flag=0,cnt=0,top=0;
        printf("\n\tPAGE\tFRAMES\tFAULTS");
        for(i=0;i<l;i++)
        {
        for(k=0;k<f;k++)
        {
                if(F[k]==s[i])
                {      
                        flag=1;
                        break;
                }
        }
        printf("\n\t%d \t",s[i]);
        if(j!=f && flag!=1)
        {
                F[top]=s[i];
                j++;
                if(j!=f)
                        top++;
        }
        else
        {
                if(flag!=1)
                {      
                        for(k=0;k<top;k++)
                        {
                                F[k]=F[k+1];
                        }
                        F[top]=s[i];
                }
                if(flag==1)
                {
                        for(m=k;m<top;m++)
                        {
                                F[m]=F[m+1];
                        }
                        F[top]=s[i];
                }
        }
        for(k=0;k<f;k++)
        {
                printf("%d",F[k]);
        }
        if(flag==0)
        {
                printf("\t Page Fault %d",cnt);
                cnt++;
        }
        else
                printf("\n  No Page Fault");
        flag=0;
}
}




